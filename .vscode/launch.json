{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Home Assistant (debugpy)",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "justMyCode": false
        },
        {
            "name": "Debug React Panel in Home Assistant",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8123/pulson-alarm",
            "webRoot": "${workspaceFolder}/pulson-frontend",
            "sourceMaps": true
        }
    ]
}